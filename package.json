{
  "name": "omni",
  "private": true,
  "version": "0.0.1",
  "description": "An extensible headless cms.",
  "repository": "chiel/omni",
  "author": "chielkunkels",
  "license": "MIT",
  "scripts": {
    "bootstrap": "yarn && lerna bootstrap",
    "build": "npm-run-all clean -p build:*",
    "build:scripts": "lerna exec --parallel -- babel -D -d dist src",
    "clean": "lerna exec --parallel -- rimraf dist",
    "lint": "npm-run-all -p lint:*",
    "lint:eslint": "eslint --ext=js --ext=jsx packages/*/src",
    "lint:stylelint": "stylelint packages/*/src/styles/*.css",
    "watch": "npm-run-all clean -p watch:*",
    "watch:scripts": "lerna exec --parallel -- babel -w -D -d dist src"
  },
  "dependencies": {
    "prop-types": "^15.5.8",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-gateway": "^2.7.0",
    "react-helmet": "^5.1.3",
    "react-modal2": "^5.0.0",
    "react-redux": "^5.0.6",
    "react-router": "^3.0.0",
    "redux": "^3.7.2",
    "reselect": "^3.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "lerna": "^2.0.0",
    "npm-run-all": "^4.0.2",
    "rimraf": "^2.6.1",
    "stylelint": "^8.1.1",
    "stylelint-order": "^0.6.0"
  }
}
